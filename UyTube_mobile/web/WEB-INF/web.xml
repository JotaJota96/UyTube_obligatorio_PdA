<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <!-- //////////////////////////////////////////////////////////////// -->
    <!-- Variables de entorno del servidor -->
    <env-entry> 
        <env-entry-name>rutaPublicacionWebService</env-entry-name>
        <env-entry-type>java.lang.String</env-entry-type>
        <env-entry-value>http://localhost:9789/UyTube_ws?wsdl</env-entry-value> 
    </env-entry>
    <env-entry> 
        <!-- URL de este servidor -->
        <env-entry-name>urlDeEsteServidor</env-entry-name>
        <env-entry-type>java.lang.String</env-entry-type>
        <env-entry-value>/uytube-mobile/</env-entry-value> 
    </env-entry>
    <env-entry> 
        <!-- URL del servidor al cual se debe redireccionar segun tipo de dispositivo -->
        <env-entry-name>urlDelOtroServidor</env-entry-name>
        <env-entry-type>java.lang.String</env-entry-type>
        <env-entry-value>/uytube/</env-entry-value> 
    </env-entry>
    <env-entry> 
        <!-- Patron de filtrado de las URL acortadas para compartir video -->
        <env-entry-name>patronURLFiltroVideo</env-entry-name>
        <env-entry-type>java.lang.String</env-entry-type>
        <env-entry-value>/v/</env-entry-value> 
    </env-entry>
    <env-entry> 
        <!-- Patron de filtrado de las URL acortadas para compartir video -->
        <env-entry-name>urlAcortadaVideo</env-entry-name>
        <env-entry-type>java.lang.String</env-entry-type>
        <env-entry-value>http://localhost:8084/uytube/v/</env-entry-value> 
    </env-entry>
    <!-- Fin de variables de entorno del servidor -->
    <!-- //////////////////////////////////////////////////////////////// -->
    <filter>
        <filter-name>FiltroDispositivo</filter-name>
        <filter-class>com.Filtros.FiltroDispositivo</filter-class>
    </filter>
    <filter>
        <filter-name>FiltroVideo</filter-name>
        <filter-class>com.Filtros.FiltroVideo</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>FiltroDispositivo</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>FiltroVideo</filter-name>
        <url-pattern>/v/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>ConsultaListaReproducion</servlet-name>
        <servlet-class>com.uytube.ConsultaListaReproducion</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ConsultaVideo</servlet-name>
        <servlet-class>com.uytube.ConsultaVideo</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>IniciarSesion</servlet-name>
        <servlet-class>com.uytube.IniciarSesion</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Presentacion</servlet-name>
        <servlet-class>com.uytube.Presentacion</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CerrarSesion</servlet-name>
        <servlet-class>com.uytube.CerrarSesion</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PeticionAjax</servlet-name>
        <servlet-class>com.uytube.PeticionAjax</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AgregarVideoAListaReproduccion</servlet-name>
        <servlet-class>com.uytube.AgregarVideoAListaReproduccion</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>QuitarVideoDeListaReproduccion</servlet-name>
        <servlet-class>com.uytube.QuitarVideoDeListaReproduccion</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AgregarValoracion</servlet-name>
        <servlet-class>com.uytube.AgregarValoracion</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AgregarComentario</servlet-name>
        <servlet-class>com.uytube.AgregarComentario</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListarCategoria</servlet-name>
        <servlet-class>com.uytube.ListarCategoria</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Buscar</servlet-name>
        <servlet-class>com.uytube.Buscar</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ConsultaListaReproducion</servlet-name>
        <url-pattern>/lista-consultar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Presentacion</servlet-name>
        <url-pattern>/presentacion</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CerrarSesion</servlet-name>
        <url-pattern>/cerrar-sesion</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>IniciarSesion</servlet-name>
        <url-pattern>/inicio-sesion</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ConsultaVideo</servlet-name>
        <url-pattern>/video-consultar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PeticionAjax</servlet-name>
        <url-pattern>/consultar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AgregarVideoAListaReproduccion</servlet-name>
        <url-pattern>/lista-agregar-video</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>QuitarVideoDeListaReproduccion</servlet-name>
        <url-pattern>/lista-quitar-video</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AgregarValoracion</servlet-name>
        <url-pattern>/video-agregar-valoracion</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AgregarComentario</servlet-name>
        <url-pattern>/video-agregar-comentario</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListarCategoria</servlet-name>
        <url-pattern>/categoria-listar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Buscar</servlet-name>
        <url-pattern>/buscar</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            2
        </session-timeout>
    </session-config>
    <error-page>
        <error-code>404</error-code>
        <location>/404.jsp</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/500.jsp</location>
    </error-page>
</web-app>
